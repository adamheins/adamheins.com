extends /includes/layout

block header
  title= article.title
  //- handle older articles that do not have a list of meta tags
  unless article.meta
    meta(name="description", content= article.description)
  each tag in article.meta
    != tag

block styles
  each style in article.styles
    link(rel="stylesheet", href=style)

block scripts
  each script in article.scripts
    script(defer src=script)

block content
  article
    section
      .article-date= article.prettyDate
      h1= article.title
      .article-flavour= article.flavour
    section!= article.html
