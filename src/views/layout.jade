doctype html
html
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(name="author", content="Adam Heins")

    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css")
    link(rel="stylesheet", href="/css/layout.css")

    block header
    block styles

  body
    .container
      .account
        if user
          a.signin.auth(href="/user/signout") Sign out
          if isAdmin
            .username!= 'Hi, <a class="auth" href="/admin">' + user.name + '</a>'
          else
            .username= 'Hi, ' + user.name
      .header
        .brand
          h1
            a.name(href="/") Adam Heins
          .flavour Code, Math, and Electronics
        nav
          a(href="/blog") Blog
          a(href="/projects") Projects
          a(href="/resume") Résumé
          a(href="/about") About
      .content
        block content
      .footer
        .contact
          a.fa.fa-lg.fa-github(href="https://github.com/adamheins")
          a.fa.fa-lg.fa-envelope(href="mailto:mail@adamheins.com")
          a.fa.fa-lg.fa-linkedin(href="http://ca.linkedin.com/in/adamwheins")
        .credit Adam Heins &copy 2015
    block scripts
