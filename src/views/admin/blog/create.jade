extends ../../layout

block header
  meta(name="description", content="Console for creating new blog posts.")
  title Create

  link(rel="stylesheet", href="/style/min/blog-view.min.css")

block content
  .page-header
    h1 Create
    p Create a new blog article.
  .page-body
    form(action="/admin/blog/create/save", method="POST")
      div
        label(for="title") Title
        input(name="title", id="title", type="text")
      div
        label(for="description") Description
        textarea(name="description", id="description", type="text", rows="2")
      div
        label(for="flavour") Flavour
        input(name="flavour", id="flavour", type="text")
      div
        label(for="body") Body
        textarea(name="body", id="body", type="text", rows="15")
      div
        label(for="link") Link
        input(name="link", id="link", type="text")
      div
        label(for="scripts") Scripts
        textarea(id="scripts", name="scripts", type="text", rows="3")
      div
        label(for="styles") Styles
        textarea(id="styles", name="styles", type="text", rows="3")
      button.submit(type="submit") Publish
      button.submit.push Save
      button.submit.push Download
      button.cancel.right(type="submit", formaction="/admin/blog", formmethod="POST") Cancel
