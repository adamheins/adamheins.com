extends ../layout

block header
  title= article.title
  meta(name="description", content= article.description)

block styles
  each style in article.styles
    if style.charAt(0) == "/"
      link(rel="stylesheet", href="#{process.env.STATIC_HOST}" + style)
    else
      link(rel="stylesheet", href=style)

block scripts
  each script in article.scripts
    if script.charAt(0) == "/"
      script(src="#{process.env.STATIC_HOST}" + script)
    else
      script(src=script)

block content
  article
    section
      if isAdmin
        a.right(href="/admin/blog/edit/" + article.link) Edit
      .article-date= article.formattedDate
      h1= article.title
      .article-flavour= article.flavour
    section!= article.body
