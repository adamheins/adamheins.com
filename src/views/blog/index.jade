extends ../layout

block header
  meta(name="description", content="A collection of my writings and project updates. I like to write about technology, engineering, and life.")
  title Blog

block content
  .page-header
    h1 Blog
    p.
      A collection of my writings and project updates. I like to write about
      technology, engineering, and life.
  .page-body
    each article in articles
      .content-block
        a.title.sexy(href= '/blog/' + article.link)= article.title
        .date= article.formattedDate
        p.description= article.description
        .links
          a(href= '/blog/' + article.link) Read Article
