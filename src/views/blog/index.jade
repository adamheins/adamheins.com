extends ../layout

block header
  meta(name="description", content="A collection of my writings and project updates. I like to write about technology, engineering, and life.")
  title Blog

block content
  .page-header
    h1 Blog
    p.
      A collection of my writings and project updates. I like to write about
      technology, engineering, and life. Interested in commenting on an
      article? Send me an #[a(href="mailto:mail@adamheins.com") email].
  .page-body
    each article in articles
      section
        h2.title
          a(href= '/blog/' + article.link)= article.title
        .date= article.formattedDate
        p.description= article.description
